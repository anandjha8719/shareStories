<h4>Dashboard</h4>
<h1>Hi {{name}}, welcome</h1>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
            <tr>
                <td><a href="stories/{{_id}}"></a>{{title}}</td>
                <td>{{formatDate createdAt 'Do MMMM YYYY, h:mm'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>u hahen't created any story yet</p>
{{/if}}